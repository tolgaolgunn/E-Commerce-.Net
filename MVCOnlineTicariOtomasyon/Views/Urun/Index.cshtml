@using MVCOnlineTicariOtomasyon.Models.Siniflar;
@model List<Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br/>
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
            {
                <p>
                    Ürün Adı: @Html.TextBox("p")
<input type="submit" value="Ara" class="btn btn-primary" />
                </p>
            }
<br/>
<table class="table table-bordered">
    <tr>
        <th>Ürün Ad</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.UrunAD</td>
            <td>@u.Marka</td>
            <td>@u.Stok</td>
            <td>@u.AlisFiyat₺</td>
            <td>@u.SatisFiyat₺</td>
            <td>@u.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunSil/@u.UrunID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@u.UrunID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Urun/SatisYap/@u.UrunID" class="btn btn-primary">Satış Yap</a></td>
        </tr>
        }
</table>
<a href="/Urun/UrunEkle" class="btn btn-success">Yeni Ürün Ekle</a>

