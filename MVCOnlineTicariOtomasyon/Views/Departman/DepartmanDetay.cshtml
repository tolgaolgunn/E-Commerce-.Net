@using MVCOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br/>
<h2>Departman Detay</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Satışlar</th>
    </tr>
    @foreach(var p in Model)
            {
                <tr>
                    <td>@p.PersonelAd</td>
                    <td>@p.PersonelSoyad</td>
                    <td><a href="/Departman/DepartmanPersonelSatis/@p.PersonelID" class="btn btn-secondary">Satışlar</a></td>
                </tr>
            }
    
</table>
